#messages
  - @al = {'error' => 'danger', 'alert' => 'danger', 'notice' => 'info' }

  - flash.each do |name, msg|
    - if msg.is_a?(String)
      = content_tag :div, :id => "flash_#{name}", :class => "alert alert-#{@al[name.downcase.to_s] || name.downcase}" do
        %button.close{:"data-dismiss" => "alert"} &times;
        %strong= t("common.#{name.downcase}")
        = msg